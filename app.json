{
  "expo": {
    "name": "Task Manager",
    "slug": "task-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/task.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/task.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taskmanager.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/task.png",
        "backgroundColor": "#3B82F6"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.taskmanager.app"
    },
    "web": {
      "favicon": "./assets/task.png",
      "bundler": "metro",
      "name": "Task Manager"
    }
  }
}
