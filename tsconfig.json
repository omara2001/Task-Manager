{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
